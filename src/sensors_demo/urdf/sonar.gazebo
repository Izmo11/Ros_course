<?xml version="1.0"?>

<robot>
    <gazebo reference="sensor_link">
        <material>Gazebo/Blue</material>
        <sensor type="ray" name="sonar_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>60</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>${hori_samples}</samples>
                        <resolution>1</resolution>
                        <min_angle>${hori_min_angle * (PI/180)}</min_angle>
                        <max_angle>${hori_max_angle * (PI/180)}</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>${vert_samples}</samples>
                        <resolution>1</resolution>
                        <min_angle>${vert_min_angle * (PI/180)}</min_angle>
                        <max_angle>${vert_max_angle * (PI/180)}</max_angle>
                    </vertical>
                </scan>
                <range>
                    <min>${range_min}</min>
                    <max>${range_max}</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="sonic_controller" filename="libgazebo_ros_range.so">
                <gaussianNoise> 0.005 </gaussianNoise>
                <alwaysOn>true</alwaysOn>
                <updateRate>10</updateRate>
                <topicName>/sonic_sensor</topicName>
                <frameName>sensor_link</frameName>
                <minRange>${range_min}</minRange>
                <maxRange>${range_max}</maxRange>
                <fov>0.5</fov>
                <radiation>ultrasound</radiation>
            </plugin>
        </sensor>
    </gazebo>
</robot>