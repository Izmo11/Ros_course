<?xml version="1.0"?>

<robot>
    <gazebo reference="sensor_link">
        <material>Gazebo/Blue</material>
        <sensor type="gpu_lidar" name="sonar_sensor">
            <pose relative_to="sensor_link">0 0 0 0 0 0</pose>
            <topic>scan</topic>
            <visualize>true</visualize>
            <alwaysOn>true</alwaysOn>
            <update_rate>2</update_rate>
            <lidar>
                <scan>
                    <horizontal>
                        <samples>${hori_samples}</samples>
                        <resolution>1</resolution>
                        <min_angle>${hori_min_angle * (PI/180)}</min_angle>
                        <max_angle>${hori_max_angle * (PI/180)}</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>${vert_samples}</samples>
                        <resolution>1</resolution>
                        <min_angle>${vert_min_angle * (PI/180)}</min_angle>
                        <max_angle>${vert_max_angle * (PI/180)}</max_angle>
                    </vertical>
                </scan>
                <range>
                    <min>${range_min}</min>
                    <max>${range_max}</max>
                    <resolution>0.01</resolution>
                </range>
                <noise> 
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.001</stddev>
                
                </noise>
            </lidar>
            <plugin name="gz::sim::systems::Sensors" filename="gz-sim-sensors-system">
                <render_engine>ogre2</render_engine>
            </plugin>
        </sensor>
    </gazebo>
</robot>